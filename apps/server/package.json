    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-fastify": "^10.3.8",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/websockets": "^10.3.8",
    "@react-email/components": "0.0.17",
    "@react-email/render": "^0.0.13",
    "@types/pg": "^8.11.5",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.7.8",
    "bytes": "^3.1.2",
    "class-transformer": "^0.5.1",
