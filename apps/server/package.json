    "@types/bytes": "^3.1.4",
    "@types/debounce": "^1.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.12.7",
