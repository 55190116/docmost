    "pg": "^8.11.5",
    "pg-tsquery": "^8.4.2",
    "postmark": "^4.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sanitize-filename-ts": "^1.0.2",
    "socket.io": "^4.7.5",
